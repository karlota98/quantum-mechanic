  <script>
    // Función para lanzar confeti pixelado
    function launchPixelConfetti() {
      const colors = ['#FF0000', '#FFFF00', '#FFFFFF', '#00FF00', '#0000FF'];
      for (let i = 0; i < 150; i++) {
        const pixel = document.createElement('div');
        pixel.style.position = 'absolute';
        pixel.style.width = '10px';
        pixel.style.height = '10px';
        pixel.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        pixel.style.top = `${Math.random() * 100}vh`;
        pixel.style.left = `${Math.random() * 100}vw`;
        pixel.style.animation = `fall ${Math.random() * 3 + 2}s linear infinite`;
        document.body.appendChild(pixel);
        setTimeout(() => pixel.remove(), 5000); // Elimina los píxeles después de 5 segundos
      }
    }
    // Añadir la animación
    const style = document.createElement('style');
    style.innerHTML = `
      @keyframes fall {
        0% { transform: translateY(-10vh); }
        100% { transform: translateY(110vh); }
      }
    `;
    document.head.appendChild(style);

    // Lanzar confeti pixelado automáticamente
    launchPixelConfetti();
    setInterval(launchPixelConfetti, 3000); // Repite cada 3 segundos
  </script>
</body>
